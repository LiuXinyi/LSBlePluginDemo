/* 水平显示 */
.flex-wrp-row {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}
.item {
  padding: 20rpx;
  position: relative;
}
.item-left {
   flex: 1; /* 重要 */
   align-items:center;
   padding-left: 5px;
}
.item-right {
  position: relative;
  align-items:center;
}



.list-left{
  /* flex:0 0 80px; */
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center
}
.list-right{
  flex:1;
}
.title{
  color: #0a071d;

  font-size:15px;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  padding-top: 5px;
  margin-bottom: 5px;
}
.desc{
  font-size:12px;
  color:#7a7a7a;
  margin-top:2px;
}
.connected-status{
  font-size:12px;
  color:green;
  margin-top:2px;
}
.disconnect-status{
  font-size:12px;
  color:#7a7a7a;
  margin-top:2px;
}


.imageBtn{
  height: 20px;
  width: 20px;
}
/** 设置容器内容垂直居中显示 */
.imageView{
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-right: 5px;
  padding: 5px;
}
.connectBtn{
  background: none !important;
  color: darkcyan !important;
  font-size: 16px;
}

.connectBtn::after{
  border: none;
}

.settingView{
    background:#f5f5f5; 
    height:100rpx;
    display: flex;
    align-items: center;
    justify-content: center; 
}

.logText{
  background: #F5F5F5;
  height: 750rpx;
  margin: 10rpx;
  font-size: 16px;

}
.text{
  padding-right: 5rpx;
  text-overflow:ellipsis;
  word-wrap:break-word;
}